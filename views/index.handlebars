  <div class="container">
			<img class="main-img" src="assets/img/burger-outline-filled.png">
			<h1 class="center-align">Eat Da Burger!</h1>
	  <div class="row">
	  	<div class="col s6">
	  		<ul class="collection">
	  		  {{#each burgers}}
	  		    {{#unless this.devoured}}
	  		      <li class="collection-item">
		  		      <div class="row">
	  		        	<h4 class="col s8">{{this.burger_name}}</h4>
		  		        <form action="/{{this.id}}?_method=PUT" method="POST">
		  		          <input type="hidden" name="devour" value="true">
		  		          <button class="btn waves-effect waves-light col s4" type="submit" name="action">Devour!
		  		            <i class="material-icons right">local_dining</i>
		  		          </button>
		  		        </form>
	  		        </div>
	  		      </li>
	  		    {{/unless}}
	  		  {{/each}}
	  		</ul>
	  	</div>
	  	<div class="col s6">
	  		<ul class="collection">
	  		  {{#each burgers}}
	  		    {{#if this.devoured}}
	  		      <li class="collection-item">
	  		        <h3>{{this.burger_name}}</h3>
	  		      </li>
	  		    {{/if}}
	  		  {{/each}}
	  		</ul>
	  	</div>
	  </div>
  	  <div class="divider"></div>
	  <div class="row">
	  	<h5 class="center-align">Enter a new burger below</h5>
	  	<form class="create-update-form" action="/" method="POST">
        	<div class="input-field col s8">
	          	<input id="input_text"  name="name" type="text" data-length="50">
	          	<label for="input_text">Burger Name</label>
        	</div>
        	<button class="btn waves-effect waves-light col s4" type="submit" name="action">Submit
        	  <i class="material-icons right">send</i>
        	</button>
    	</form>
      </div>
</div>